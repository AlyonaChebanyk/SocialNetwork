<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userRightImage"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_person_black_24dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_margin="10dp"
        android:id="@+id/messageRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_white_background"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="Some text"
        app:layout_constraintEnd_toStartOf="@+id/userRightImage"
        app:layout_constraintTop_toTopOf="@+id/userRightImage" />

</androidx.constraintlayout.widget.ConstraintLayout>